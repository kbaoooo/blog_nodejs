<div class="mt-4">
    <h3>cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="exampleInputEmail1">Tên khóa học</label>
            <input value="{{course.name}}" type="text" name="name" class="form-control" id="exampleInputEmail1">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mô tả</label>
            <textarea name="description" class="form-control" id="exampleInputPassword1">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="exampleCheck1">Video ID</label>
            <input value="{{course.videoId}}" type="text" name="videoId" class="form-control" id="exampleInputEmail1">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>